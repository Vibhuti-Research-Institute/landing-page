---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";
import { Image } from "astro:assets";
import oneImage from "~/assets/circles.svg";
import twoImage from "~/assets/dotted_circles.svg";
import threeImage from "~/assets/lines.svg";
import fourImage from "~/assets/snowflakes.svg";
import fiveImage from "~/assets/zigzag.svg";
import sixImage from "~/assets/yello-circles.svg";

const features: Array<FeatureItem> = [
  {
    title: "Bring Your Own Framework",
    description:
      "Build your site using React, Svelte, Vue, Preact, web components, or just plain ol' HTML + JavaScript.",
    icon: "mdi:handshake",
    image: fourImage,
  },
  {
    title: "100% Static HTML, No JS",
    description:
      "Astro renders your entire page to static HTML, removing all JavaScript from your final build by default.",
    icon: "mdi:feather",
    image: twoImage,
  },
  {
    title: "On-Demand Components",
    description:
      "Need some JS? Astro can automatically hydrate interactive components when they become visible on the page. If the user never sees it, they never load it.",
    icon: "mdi:directions-fork",
    image: threeImage,
  },
  {
    title: "Broad Integration",
    description:
      "Astro supports TypeScript, Scoped CSS, CSS Modules, Sass, Tailwind, Markdown, MDX, and any of your favorite npm packages.",
    icon: "mdi:graph",
    image:  fourImage,
  },
  {
    title: "SEO Enabled",
    description:
      "Automatic sitemaps, RSS feeds, pagination and collections take the pain out of SEO and syndication.",
    icon: "mdi:search-web",
    image: fiveImage,
  },
  {
    title: "Community",
    description:
      "Astro is an open source project powered by hundreds of contributors making thousands of individual contributions.",
    icon: "mdi:account-group",
    image: sixImage,
  },
];
---

<ContentSection title="Shop by Category" id="features">
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
    {
      features.map(({ title, description, icon, image }) => (
        <li class="flex flex-col items-center bg-white rounded-lg shadow-md p-1">
          <Image
            class="w-full rounded-lg mb-1"
            src={image}
            style="transform: rotate(-180deg);"
            widths={[200, 400, 600, 800, 1000]}
            sizes="100vw"
            loading="eager"
            alt="illustration"
          />
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
          <p class="text-center text-primary text-sm">
            <span class="font-extrabold"> products </span> products
          </p>
          <a
            href="#"
            class="inline-block mt-4 rounded-md border border-current bg-primary px-4 py-2 text-white hover:bg-offset transition"
          >
            See Collection
          </a>
        </li>
      ))
    }
  </ul>
</ContentSection>
